  <% if(errMessage != null){ %>
    <p class="error"><%= errMessage %></p>
  <% } %>
  <h1>
  	Log in below
  	<small class="text-muted"> (or create a new account)</small>
  </h1>
  <div id="login_form">
	  <form id='login' action="/checklogin" method="post">
	    <h4>Username:</h4><input type="text" name="username" class="form-control"><br>
	    <h4>Password:</h4><input type="password" name="password" class="form-control">
	    <br><br><input type="submit" value="Login" class="btn btn-secondary">
	    <a href="/signup" class="btn btn-info" role="button">Create an account</a>
	  </form>
  </div>
